---
// StallmanBadge component - Visual indicator for Stallman-focused posts
// Displays a GNU head icon (simplified SVG) with label for posts about Richard Stallman
interface Props {
  showLabel?: boolean;
  size?: 'sm' | 'md' | 'lg';
}

const { showLabel = true, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};

const textSizeClasses = {
  sm: 'text-xs',
  md: 'text-sm',
  lg: 'text-base',
};
---

<span
  class="stallman-badge inline-flex items-center gap-1 bg-primary/10 text-primary px-2 py-0.5 rounded-full font-sans font-medium"
  title="Stallman-focused post"
>
  {/* Simplified GNU head icon as inline SVG */}
  <svg
    class={sizeClasses[size]}
    viewBox="0 0 24 24"
    fill="currentColor"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
  >
    {/* Simplified gnu/wildebeest head silhouette */}
    <path d="M12 2C8.5 2 5.5 4.5 5 8c-.3 2 .5 4 2 5.5l-1 6.5h2l.5-4c1 .6 2.2 1 3.5 1s2.5-.4 3.5-1l.5 4h2l-1-6.5c1.5-1.5 2.3-3.5 2-5.5-.5-3.5-3.5-6-7-6zm-3 7c-.5 0-1-.5-1-1s.5-1 1-1 1 .5 1 1-.5 1-1 1zm6 0c-.5 0-1-.5-1-1s.5-1 1-1 1 .5 1 1-.5 1-1 1zm-3 4c-1.5 0-2.5-.5-2.5-.5l.5-1s.8.5 2 .5 2-.5 2-.5l.5 1s-1 .5-2.5.5z"/>
  </svg>
  {showLabel && (
    <span class={textSizeClasses[size]}>GNU</span>
  )}
</span>

<style>
  .stallman-badge {
    /* Ensure consistent display across contexts */
    white-space: nowrap;
  }
</style>
