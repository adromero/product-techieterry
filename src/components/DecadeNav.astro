---
interface Props {
  currentDecade?: string;
}

const { currentDecade } = Astro.props;

const decades = ['1980s', '1990s', '2000s', '2010s', '2020s'];
---

<nav class="decade-nav" aria-label="Browse by decade">
  <ul class="flex overflow-x-auto md:overflow-x-visible md:flex-wrap justify-start md:justify-center gap-2 sm:gap-4 -mx-4 px-4 md:mx-0 md:px-0 scrollbar-hide">
    {decades.map((decade) => {
      const isActive = currentDecade === decade;
      return (
        <li class="flex-shrink-0 md:flex-shrink">
          <a
            href={`/decade/${decade}`}
            class:list={[
              'inline-flex items-center justify-center min-w-[44px] min-h-[44px] px-4 py-2 rounded-md font-sans text-sm sm:text-base transition-colors',
              isActive
                ? 'bg-primary text-white'
                : 'bg-white text-primary hover:bg-primary hover:text-white border border-primary/30',
            ]}
            aria-current={isActive ? 'page' : undefined}
          >
            {decade}
          </a>
        </li>
      );
    })}
  </ul>
</nav>
